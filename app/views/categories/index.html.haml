%h1 Listing categories
%table
  %thead
    %tr
      %th Name
      %th Description
      %th Hidden
      %th Sort
      %th Seo name
      %th
      %th
      %th
  %tbody
    - @categories.each do |category|
      %tr
        %td= image_tag category.image.url(:thumb)
        %td= category.name
        %td= category.description
        %td= category.hidden
        %td= category.sort
        %td= category.seo_name
        %td= link_to 'Show', category
        %td= link_to 'Edit', edit_category_path(category)
        %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Category', new_category_path
