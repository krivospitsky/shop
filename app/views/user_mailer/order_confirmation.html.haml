%dl.dl-horizontal
  %dt Имя
  %dd
    =@order.name

%dl.dl-horizontal
  %dt e-mail
  %dd
    =@order.email

%dl.dl-horizontal
  %dt телефон
  %dd
    =@order.phone

%dl.dl-horizontal
  %dt Индекс
  %dd
    =@order.zip

%dl.dl-horizontal
  %dt Город
  %dd
    =@order.city

%dl.dl-horizontal
  %dt Адрес
  %dd
    =@order.address

%dl.dl-horizontal
  %dt Коментарий
  %dd
    =@order.comment

%dl.dl-horizontal
  %dt Статус
  %dd
    =@order.state

%table.table
  -@order.cart.cart_items.all.each do |item|
    %tr
      %td
        =link_to product_path(item.product.id) do
          =image_tag item.product.images.first.image.url(:thumb)
      %td
        =link_to item.product.name, product_path(item.product.id)
      %td
        %small
          = number_to_currency(item.product.price, unit:"руб.", :delimiter => " ", :format => "%n %u", :precision => 0)
      %td
        =item.quantity
      %td
        %small
          = number_to_currency(item.product.price*item.quantity, unit:"руб.", :delimiter => " ", :format => "%n %u", :precision => 0)
