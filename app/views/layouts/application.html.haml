!!!
= javascript_include_tag "application"
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Shop"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    <script type="text/javascript" src="//vk.com/js/api/openapi.js?101"></script>
    = stylesheet_link_tag "application", :media => "all"
    / For third-generation iPad with high-resolution Retina display:
    / Size should be 144 x 144 pixels
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    / For iPhone with high-resolution Retina display:
    / Size should be 114 x 114 pixels
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    / For first- and second-generation iPad:
    / Size should be 72 x 72 pixels
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    / For non-Retina iPhone, iPod Touch, and Android 2.1+ devices:
    / Size should be 57 x 57 pixels
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    / For all other devices
    / Size should be 32 x 32 pixels
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
  %body
    .container-fixed
      %nav.navbar.navbar-default{role:'navigation'}
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"}
            CarGadget.ru
        %ul.nav.navbar-nav
          .navbar-text +7 (920) 618-02-01
          %li
            %a{href: cart_path}
              .glyphicon.glyphicon-shopping-cart
              Корзина
              .badge= get_current_cart.cart_items.count.to_s
        .collapse.navbar-collapse.navbar-ex1-collapse
          %form.navbar-form.navbar-right{role:"search"}
            .input-group
              %input.form-control{type:"text", placeholder:"Поиск"}
              %span.input-group-btn.input-group-sm
                %button.btn.btn-default.btn.xs
                  %span.glyphicon.glyphicon-search
          %ul.nav.navbar-nav.navbar-right
            %li
              =link_to "Оплата и доставка", article_path(1)
          %ul.nav.navbar-nav
            =render '/categories/tree'
            / -%li.dropdown
            /   %a.dropdown-toggle{href:"#", 'data-toggle'=>"dropdown"}
            /     Статьи
            /     <b class="caret"></b>
            /   %ul.dropdown-menu
            /     %li= link_to "Слинг или рюкзак", "/path3"
            /     %li= link_to "Эрго-рюкзак против кенгуру", "/path3"
            /     %li= link_to "Выбрать слинг", "/path3"

            / %li.dropdown
            /   %a.dropdown-toggle{href:"#", 'data-toggle'=>"dropdown"}
            /     Производители
            /     <b class="caret"></b>
            /   %ul.dropdown-menu
            /     -Manufacturer.all(order:'name').each do |manufacturer|
            /       %li
            /         =link_to manufacturer.name, manufacturer_path(manufacturer.id)

      = yield

      %footer
        .nav.navbar.navbar-default
          .navbar-text.pull-right
            &copy; Cargadget.ru 2013
