.col-md-3.col-sm-4.col-xs-6
	.thumbnail.shadow
		.name.text-center
			=link_to product.name, product_path(product.id)
		.image.text-center
			=link_to image_tag(product.images.first.image.url(:list)), product_path(product.id) if product.images.first
		.price.text-center
			= "Цена #{product.price} руб."
			%a.btn.btn-primary.btn-xs{href:product_path(product.id)}
				Подробнее

